@{
}


@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th class="align-middle">@Html.DisplayNameFor(model=>model.ProfilePictureURL)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model=>model.FullName)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model=>model.Description)</th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 200px" />
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>

                        <td class="align-middle">
                            <div class="btn-group">
                                <a class="btn btn-outline-primary" asp-controller="Actor" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> &nbsp&nbsp
                                <a class="btn btn-outline-info" asp-controller="Actor" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> &nbsp&nbsp
                                <a class="btn btn-danger text-white" asp-controller="Actor" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white; z-index: 999">
    <a asp-controller="Actor" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add New Actor </a>
</div>
